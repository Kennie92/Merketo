@model List<ProductModel>

@{
    var productsTag = await productService.GetIfFeaturedAsync();
}

@if (productsTag.Any())
{
<section class="best-collection">
    <div class="container">
        
        <h1 class="collection-title">Best Collection</h1>
          
        <ul class="categories">
            <li class="category-item">All</li>
            <li class="category-item">Bag</li>
            <li class="category-item">Dress</li>
            <li class="category-item">Decoration</li>
            <li class="category-item">Essentials</li>
            <li class="category-item">Interior</li>
            <li class="category-item">Laptop</li>
            <li class="category-item">Mobile</li>
            <li class="category-item">Beaty</li>
        </ul>
           
        <div class="collection-grid">

            @foreach (var products in productsTag.Take(8))
            {
                <div class="Topselling-Card">
                    <a class="collection-item" href="@Url.Action("details","products", new { id = products.ProductId})">
                        <img class="card-image-small" src="@products.ImageUrl" alt="">
                        <div class="body">
                            <div class="title">@products.ProductName</div>
                            <div class="info">
                                <div class="price">$@string.Format("{0:F0}", @products.Price)</div>
                                <i class="add-cart fa-regular fa-cart-plus"></i>
                            </div>
                        </div>
                    </a>
                </div>
            }
            <!-- collection-item end -->

        </div>
        <div class="load-more">
            <button class="btn-outline-white">LOAD MORE <i class="fa-solid fa-rotate-right"></i></button>
        </div>
    </div>
</section>
}