<header>

    <div class="container">
        <div class="logo"><a asp-controller="home" asp-action="index"><img src="images/logo.svg" alt=""><span>bmerketo</span></a></div>
        <nav id="menu" class="menu-links">

            <a class="link" asp-controller="Home" asp-action="Index">HOME</a>
            <a class="link" asp-controller="Products" asp-action="Index">PRODUCTS</a>
            <a class="link" asp-controller="Contacts" asp-action="Index">CONTACT</a>
            @if (signInManager.IsSignedIn(User) && User.IsInRole("Admin"))
            {
                <a class="link" asp-controller="admin" asp-action="index">DASHBOARD</a>
            }
        </nav>
        <nav class="menu-icons">
            <a class="link" asp-controller="product" asp-action="search"><i class="fa-solid fa-search"></i></a>
            @if (signInManager.IsSignedIn(User))
            {
                <a class="link" asp-controller="account" asp-action="Index">@User.Identity?.Name</a>
                <a class="link" asp-controller="account" asp-action="LogOut">Logout</a>
            }
            else
            {
                <a class="link" asp-controller="account" asp-action="login">Login</a>
                <a class="link" asp-controller="account" asp-action="register">Register</a>
            }
            <a class="link" asp-controller="cart" asp-action="index"><i class="fa-solid fa-cart-shopping"></i></a>
        </nav>
        <div class="toggle">
            <button class="btn-toggle btn-outline-white" data-option="toggle" data-target="#menu">
                <i id="icon" class="fa-regular fa-bars"></i>
            </button>
        </div>
    </div>
</header>
<script>toggleMenuBtn('[data-option="toggle"]')</script>