@model List<ProductModel>



@{
    var products = await productService.GetIfNewAsync();

}

  @if (products.Any())
    {

<section class="up-to-sell">
    <div class="container">
        <div class="collection-grid">
            <div class="items">
                <!-- collection-item start -->
                <div class="for-sale-card">
                    <a class="collection-item" href="#">
                            <img src="@products.First(x => x.ProductId == 25).ImageUrl" alt="">
                    <div class="body">
                                <div class="title">@products.First(x => x.ProductId == 25).ProductName</div>
                        <div class="info">
                                    <div class="price">$@string.Format("{0:F0}", @products.First(x => x.ProductId == 25).Price)</div>
                            <i class="add-cart fa-regular fa-cart-plus"></i>
                        </div>
                    </div>
                </a>
                </div>
              
                <!-- collection-item end -->
            </div>
            <div class="discover">
                <!-- collection-content start -->
                <div class="collection-content">
                    <div class="container">
                        <div class="title-red">UP TO SELL</div>
                        <div class="title">50% OFF</div>
                        <div class="ingress">Get the Best Price</div>
                        <div class="text">Get the best daily offer et accusam et justo duo dolores et ea rebum. Stet clita kasd gubergren no sea taki</div>
                        <a asp-action="Index" asp-controller="Products" class="link">Discover More</a>
                    </div>
                </div>
                <!-- collection-content end -->
            </div>
            <div class="items">
                <!-- collection-item start -->
                <div class="for-sale-card">
                <a class="collection-item" href="@Url.Action("details","products", new { id = products.Last().ProductId})">
                    <img src="@products.Last().ImageUrl" alt="">
                    <div class="body">
                        <div class="title">@products.Last().ProductName</div>
                        <div class="info">
                            <div class="price">$@string.Format("{0:F0}", @products.Last().Price)</div>
                            <i class="add-cart fa-regular fa-cart-plus"></i>
                        </div>
                    </div>
                </a>
                </div>
                
                <!-- collection-item end -->
            </div>
        </div>
    </div>
</section>
}